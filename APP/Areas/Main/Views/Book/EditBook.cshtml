@using System.Text.Json;
@using Utility;
@model Models.Books
@{
    
}
<style>
    .select2-container--default .select2-selection--multiple .select2-selection__choice {
        color: black;
    }

    .required:after {
        content: " *";
        color: red;
    }
</style>
<div class="container">
    <div class="card">
        <div class="card-header bg-gradient-lightblue">
            <h3 class="card-title" style="font-weight:bold">Update Book Details.</h3>
        </div>
        <div class="card-body">
            <form method="post"enctype="multipart/form-data">

                <input type="hidden" asp-for="Id" value="@Model.Id" />
                <input type="hidden" asp-for="ImgUrl" value="@Model.ImgUrl" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-3">
                        <img src="@Model.ImgUrl" width="100%;" style="border-radius:5px; border:1px solid #bbb9b9" />
                    </div>
                    <div class="col-md-9">
                        <div class="form-group row">
                            <div class="col-md-3">
                                <label class="required" asp-for="Name"></label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <label class="required" asp-for="ISBN"></label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="ISBN" class="form-control" />
                                <span asp-validation-for="ISBN" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <label class="required" asp-for="Author"></label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="Author" class="form-control" />
                                <span asp-validation-for="Author" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <label class="required" asp-for="Price"></label>
                            </div>
                            <div class="col-md-9">
                                <input type="number" asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <label class="required" asp-for="Description"></label>
                            </div>
                            <div class="col-md-9">
                                <textarea asp-for="Description" class="form-control"></textarea>

                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <label class="required" asp-for="ImgUrl">Image</label>
                            </div>
                            <div class="col-md-9">

                                <div class="input-group">
                                    <div class="custom-file">
                                        <div class="custom-file">
                                            <input type="file" name="files" id="uploadBox" multiple class="form-control" />
                                        </div>
                                        <span asp-validation-for="ImgUrl" class="text-danger"></span>
                                    </div>
                                    <div class="input-group-append">
                                        <span class="input-group-text">Upload</span>
                                    </div>

                                </div>


                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-9 offset-md-3">
                                <div class="row">
                                    <div class="col">
                                        <button type="submit" onclick="return validateInput()" class="btn btn-primary form-control">Update</button>
                                    </div>
                                    <div class="col">
                                        <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
            

               
            </form>
        </div>
    </div>
</div>

