@model Models.ViewModels.RestPasswordVM
@{
}

<div class="container">
    <div class="card">
        <div class="card-header bg-gradient-lightblue">
            <h3 class="card-title" style="font-weight:bold">Reset Password</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="ApplicationUser.FirstName" value="@Model.ApplicationUser.FirstName" />
                <input type="hidden" asp-for="ApplicationUser.LastName" value="@Model.ApplicationUser.LastName" />
                <input type="hidden" asp-for="ApplicationUser.CreatedBy" value="@Model.ApplicationUser.CreatedBy" />
                <input type="hidden" asp-for="ApplicationUser.Id" value="@Model.ApplicationUser.Id" />
                <input type="hidden" asp-for="Code" value="@Model.Code" />

                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="ApplicationUser.Email"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="ApplicationUser.Email" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="Password"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="ConfirmPassword"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-8 offset-md-4">
                        <div class="row">
                            <div class="col">
                                <button type="submit" class="btn btn-primary form-control">Reset</button>
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Styles{
}

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}